.program{price: program.price.to_s, rel: rel}
  .program-image
    = image_tag program.avatar_url(:list)
    .program-overlay
      .program-name
        = program.name
  .program-footer
    .time
      = program.duration.to_s
      минут
    .price
      = program.price.to_s
      рублей
  .program-desc
    = program.about.gsub("\n", "<br />").html_safe