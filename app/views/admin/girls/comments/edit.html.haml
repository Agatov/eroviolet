%legend
  = link_to 'Все отзывы', admin_girl_comments_path(@girl)
  = '/'
  Редактировать


= simple_form_for @comment, url: admin_girl_comment_path, html: {class: ['form-horizontal', 'span8']} do |f|
  = f.input :moderated
  = f.input :username, input_html: {class: 'span6'}
  = f.input :content, input_html: {class: 'span6', rows: 4}
  = f.input :answer, input_html: {class: 'span6', rows: 4}
  = f.input :created_at, input_html: {class: 'span6', rows: 4}
  .form-actions.span6
    = f.submit 'Сохранить', class: ['btn', 'btn-primary']