%legend
  Фотоальбом

- key = Rails.application.config.session_options[:key]

= content_for :scripts do
  :javascript
    $(document).ready(function() {
      var upload_params = {
          '#{key}' : '#{cookies[key]}',
          '#{request_forgery_protection_token}' : '#{form_authenticity_token}',
          '_http_accept': 'application/javascript'
        };

      window.uploader = new AccountPhotoUploader(upload_params, "#photo_image");
      uploader.initialize();
    });

.row
  .span12
    = fields_for Photo.new do |f|
      = f.file_field :image, rel: admin_girl_photos_path(@girl)
      %br
      .progress.progress-striped.active.hide#photo-upload-progress
        .bar{style: 'width: 0%;'}


.row
  .span12
    %ul.thumbnails#photos
      - @girl.photos.each do |photo|
        = render partial: 'admin/common/photo', locals: {girl: @girl, photo: photo}

%legend
  Изменить

= render partial: 'admin/girls/form', locals: {girl: @girl, url: admin_girl_path(@girl)}